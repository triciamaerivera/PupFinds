<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PupFinds"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DashboardActivityLost"
            android:exported="true">
        </activity>

        <activity
            android:name=".DashboardActivityFound"
            android:exported="true">
        </activity>

        <activity
            android:name=".ReturnedItemsActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".UploadItemActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".LoginActivity">
        </activity>

        <activity
            android:name=".RegistrationActivity">
        </activity>

        <activity
            android:name=".ViewItemActivity">
        </activity>

        <activity
            android:name=".ChatsActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".EvidenceSubmissionActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ConvoActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".UserProfileActivity">
        </activity>
    </application>

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>
